<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>
                    <img src="../Content/themes/base/images/logo.png" /></h1>
            </div>
            <div id="logindisplay">
                ...
            </div>
            <nav>
                <ul id="menu">
                    @RenderSection("Header", false)
                    <li>@Html.ActionLink(".", "Exit", "Card", new { @id = "hidden"})</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
            <div id="keyboard">
                <div id="nContent">
                    <input type="button" value="1" class="nNumber" id="n1" />
                    <input type="button" value="2" class="nNumber" id="n2" />
                    <input type="button" value="3" class="nNumber" id="n3" />
                    <input type="button" value="Cancel" class="nFunction" id="nCancel" />
                    <input type="button" value="4" class="nNumber" id="n4" />
                    <input type="button" value="5" class="nNumber" id="n5" />
                    <input type="button" value="6" class="nNumber" id="n6" />
                    <input type="button" value="Clear" class="nFunction" id="nClear" />
                    <input type="button" value="7" class="nNumber" id="n7" />
                    <input type="button" value="8" class="nNumber" id="n8" />
                    <input type="button" value="9" class="nNumber" id="n9" />
                    <input type="button" value="Enter" class="nFunction" id="nEnter" />
                    <input type="button" value="" class="nNumber" id="nn1" />
                    <input type="button" value="0" class="nNumber" id="n0" />
                    <input type="button" value="" class="nNumber" id="nn2" />
                </div>
            </div>
        </footer>
    </div>
</body>
</html>

@*Code keyboard*@
<script>
    $(document).ready(function () {
        var text = $(".textbox");
        $("#n1").click(function () {
            text.val(text.val() + "1");
        });

        $("#n2").click(function () {
            text.val(text.val() + "2");
        });

        $("#n3").click(function () {
            text.val(text.val() + "3");
        });

        $("#n4").click(function () {
            text.val(text.val() + "4");
        });

        $("#n5").click(function () {
            text.val(text.val() + "5");
        });

        $("#n6").click(function () {
            text.val(text.val() + "6");
        });

        $("#n7").click(function () {
            text.val(text.val() + "7");
        });

        $("#n8").click(function () {
            text.val(text.val() + "8");
        });

        $("#n9").click(function () {
            text.val(text.val() + "9");
        });

        $("#n0").click(function () {
            text.val(text.val() + "0");
        });

        $("#nCancel").click(function () {
            window.location.href = '/Home/Main';
        });

        $("#nClear").click(function () {
            text.val("");
        });

        $("#nEnter").click(function () {
            $(".btnSubmit").click();
        });
    });
</script>
